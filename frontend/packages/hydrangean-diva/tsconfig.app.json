{
	"extends": "../../tsconfig.app.json",
	"compilerOptions": {
		"types": ["vite/client", "node"],

		/* Linting */
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"erasableSyntaxOnly": false,

		"paths": {
			"@/*": ["./src/*"]
		},
		"experimentalDecorators": true,
		"jsxImportSource": "@emotion/react"
	},
	"include": ["src"]
}
